{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ESNext",
        ],
        "moduleResolution": "Node",
        "strict": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@/fixtures/*": [
                "fixtures/*"
            ],
        },
    },
    "include": [
        "**/*.d.ts",
        "src",
        "vitest.config.js",
        "tests",
        "fixtures",
        "demo"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        },
        "require": [
            "tsconfig-paths/register"
        ]
    }
}